print("Executed !")

game:GetService("RunService").RenderStepped:Connect(function()
task.spawn(function()
if getgenv().Sh == true and game.Players.LocalPlayer.PlayerGui.ShotMeter.Enabled == true then
getgenv().Sh = false
task.wait(getgenv().Timer - game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue() * 0.001)
task.spawn(function()
local args = {
    [1] = {
        ["Action"] = "StopMeter",
        ["PumpFake"] = false
    }
}

game:GetService("ReplicatedStorage"):WaitForChild("Lib"):WaitForChild("EventsPlayer"):WaitForChild("Actions"):FireServer(unpack(args))
end)
local args = {
    [1] = {
        ["Action"] = "ShootBall",
        ["ClientTime"] = 0
    }
}

game:GetService("ReplicatedStorage"):WaitForChild("Lib"):WaitForChild("EventsPlayer"):WaitForChild("Actions"):FireServer(unpack(args))
if getgenv().Post == true then
local args = {
    [1] = {
        ["Action"] = "Post",
        ["Val"] = false
    }
}

game:GetService("ReplicatedStorage"):WaitForChild("Lib"):WaitForChild("EventsPlayer"):WaitForChild("Actions"):FireServer(unpack(args))
end
           end
      end)
end)
local h;
h = hookmetamethod(game,'__namecall',function(self,...)
local args = {...}
if tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and (args[1]["Action"] == "Shootball" or args[1]["Action"] == "Post" or args[1]["Action"] == "StopMeter") and not checkcaller() then
return;
elseif tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and args[1]["ShotName"] == "Fade" then
getgenv().Timer = 0.625

getgenv().Sh = true
elseif tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and args[1]["ShotName"] == "Reg" then
getgenv().Timer = 0.585

getgenv().Sh = true
elseif tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and args[1]["ShotName"] == "Layup" then
getgenv().Timer = 0.55

getgenv().Sh = true
elseif tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and args[1]["ShotName"] == "Moving" then
getgenv().Timer = 0.6

getgenv().Sh = true
elseif tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and args[1]["ShotName"] == "Dunk" then
getgenv().Timer = 0.5

getgenv().Sh = true
elseif tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and args[1]["ShotName"] == "PostFade" then
getgenv().Timer = 0.65

getgenv().Sh = true
task.spawn(function()
getgenv().Post = true
task.wait(0.75)
getgenv().Post = false
end)
end
return h(self,...)
end)
task.spawn(function()
workspace["_NpcCrown"]:Destroy()
workspace["Extra"]:Destroy()
end)
