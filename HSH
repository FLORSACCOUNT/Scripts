setfpscap(40)
getgenv().Timer = 0.345
local playerl = {}
task.spawn(function()
while task.wait(0.1) do
for i,v in pairs(game.Players:GetPlayers()) do
if v ~= game.Players.LocalPlayer and not table.find(playerl,v) then
table.insert(playerl,v)
       end
     end
   end
end)
game.Players.LocalPlayer.PlayerGui.Meters.ChildAdded:Connect(function(b)
for i,v in pairs(playerl) do
if b.Name:match(v.Name) and v.Character and game.Players.LocalPlayer:DistanceFromCharacter(v.Character:WaitForChild("HumanoidRootPart",9e9).Position) <= 15 then
local args = {
    [1] = {
        ["Action"] = "BlockStart"
    }
}

game:GetService("ReplicatedStorage"):WaitForChild("Lib"):WaitForChild("EventsPlayer"):WaitForChild("Actions"):FireServer(unpack(args))
local args = {
    [1] = {
        ["Action"] = "BlockBall"
    }
}

game:GetService("ReplicatedStorage"):WaitForChild("Lib"):WaitForChild("EventsPlayer"):WaitForChild("Actions"):FireServer(unpack(args))
firesignal(game.Players.LocalPlayer.PlayerGui.MobileUi.Mobile.Def.Jump["MouseButton1Down"])
firesignal(game.Players.LocalPlayer.PlayerGui.MobileUi.Mobile.Def.Jump["MouseButton1Up"])
end
end
end)
game.Players.LocalPlayer.PlayerGui.MobileUi.Mobile.Off.Shoot.MouseButton1Down:Connect(function()
local args = {
    [1] = {
        ["Shift"] = true,
        ["ShotType"] = "Fast",
        ["Action"] = "StartMeter",
        ["ShotName"] = "Reg"
    }
}

game:GetService("ReplicatedStorage"):WaitForChild("Lib"):WaitForChild("EventsPlayer"):WaitForChild("Actions"):FireServer(unpack(args)) 
task.wait(getgenv().Timer)
firesignal(game.Players.LocalPlayer.PlayerGui.MobileUi.Mobile.Off.Shoot["MouseButton1Up"])
end)
game.Players.LocalPlayer.PlayerGui.MobileUi.Mobile.Off.Dunk.MouseButton1Down:Connect(function()
local args = {
    [1] = {
        ["Shift"] = true,
        ["ShotType"] = "Fast",
        ["Action"] = "StartMeter",
        ["ShotName"] = "Reg"
    }
}

game:GetService("ReplicatedStorage"):WaitForChild("Lib"):WaitForChild("EventsPlayer"):WaitForChild("Actions"):FireServer(unpack(args)) 
task.wait(getgenv().Timer)
firesignal(game.Players.LocalPlayer.PlayerGui.MobileUi.Mobile.Off.Dunk["MouseButton1Up"])
end)
local h;
h = hookmetamethod(game,'__namecall',function(self,...)
local args = {...}
if tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and args[1]["Action"] == "StartMeter" and not checkcaller() then
return;
elseif tostring(self) == "Actions" and getnamecallmethod() == "FireServer" and (args[1]["Action"] == "BlockStart" or args[1]["Action"] == "BlockBall") and not checkcaller() then
return;
end
return h(self,...)
end)
task.spawn(function()
workspace["_NpcCrown"]:Destroy()
workspace["Extra"]:Destroy()
end)
